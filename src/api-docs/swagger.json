   "definitions":{
      "Customer":{
         "required":[
            "name",
            "lastName",
            "mobilePhone",
            "birthdate",
            "sex"
         ],
         "properties":{
            "_id":{
               "type":"string",
               "uniqueItems":true
            },
            "name":{
               "type":"string"
            },
            "lastName":{
               "type":"string"
            },
            "address":{
